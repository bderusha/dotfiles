[core]
	editor = subl -w
	excludesfile = /opt/boxen/config/git/gitignore
[user]
	email = bderusha@dataxu.com
	name = Bill DeRusha
[alias]
	s = status
	a = !git add . && git status
	au = !git add -u . && git status
	aa = !git add . && git add -u . && git status
	c = commit
        ca = commit --amend
        cane = commit --amend --no-edit
	l = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
	lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%an%d%Creset %s %Cgreen(%cr)%Creset' --date=relative
	d = diff --color-words
	co = checkout
	pro = pull --rebase origin
	po = push origin
        cp = cherry-pick
        ri = !sh -c 'git rebase -i HEAD~$1' -
        untrack = update-index --assume-unchanged
        track = update-index --no-assume-unchanged
[color]
	ui = auto
	interactive = auto
[rerere]
	enabled = true
[push]
	default = current
[branch]
  # always setup 'git pull' to rebase instead of merge
  autosetuprebase = always
[merge]
	stat = true
	tool = diffmerge
[credential]
	helper = /opt/boxen/bin/boxen-git-credential
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.localized/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[hub]
    protocol = https
[mergetool "diffmerge"]
	cmd = diffmerge --merge --result=$MERGED $LOCAL $BASE $REMOTE
	trustExitCode = true
[mergetool]
	keepBackup = false
